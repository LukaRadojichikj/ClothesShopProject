@model ClothesShopProject.ViewModels.AddOrEditApparel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Apparel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Apparel.Id" />

            <div class="form-group">
                <label asp-for="Apparel.Name" class="control-label"></label>
                <input asp-for="Apparel.Name" class="form-control" />
                <span asp-validation-for="Apparel.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Apparel.Colour" class="control-label"></label>
                <input asp-for="Apparel.Colour" class="form-control" />
                <span asp-validation-for="Apparel.Colour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShopId" class="control-label"></label>
                <select asp-for="ShopId" class="form-control" asp-items="Model.AvailableShops"></select>
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PictureFile" class="control-label">Upload Picture</label>
                <input asp-for="PictureFile" type="file" class="form-control" />
                <span asp-validation-for="PictureFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
