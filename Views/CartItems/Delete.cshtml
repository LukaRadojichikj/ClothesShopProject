@model ClothesShopProject.Models.CartItem

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShopApparelShoe.Shop.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShopApparelShoe.Shop.Name)
        </dd>
        @if (Model.ShopApparelShoe.Apparel != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShopApparelShoe.Apparel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShopApparelShoe.Apparel.Name)
            </dd>
        }
        else if (Model.ShopApparelShoe.Shoe != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShopApparelShoe.Shoe)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShopApparelShoe.Shoe.Name)
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShopApparelShoe.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShopApparelShoe.Price)$
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.getTotalPricePerItem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.getTotalPricePerItem)$
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="CartItems" asp-action="ShowCart" class="btn btn-secondary ms-2">Back to Cart</a>
    </form>

</div>
