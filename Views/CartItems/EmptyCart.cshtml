@model ClothesShopProject.Models.ShopApparelShoe

<h1>Are you sure you want to clear the whole cart?</h1>

<form asp-action="EmptyCart">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="CartItems" asp-action="ShowCart" class="btn btn-secondary ms-2">Back to Cart</a>
</form>
