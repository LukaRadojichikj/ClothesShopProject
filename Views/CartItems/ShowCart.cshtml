@model IEnumerable<ClothesShopProject.Models.CartItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Here are your items</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Shop Name
            </th>
            <th>
                Item Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShopApparelShoe.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.getTotalPricePerItem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShopApparelShoe.Shop.Name)
                    </td>
                    <td>
                        @if (item.ShopApparelShoe.Apparel != null)
                        {
                            @Html.DisplayFor(modelItem => item.ShopApparelShoe.Apparel.Name)
                        }
                        else if (item.ShopApparelShoe.Shoe != null)
                        {
                            @Html.DisplayFor(modelItem => item.ShopApparelShoe.Shoe.Name)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShopApparelShoe.Price)$
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.getTotalPricePerItem)$
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Remove item</a> 
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit quantity</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<h1>Total price for all items is: @ViewBag.TotalPrice $</h1>
<a asp-action="ProceedCart" class="btn btn-primary btn-sm">Buy the items</a>
<a asp-action="EmptyCart" class="btn btn-danger btn-sm">Remove all items</a>

