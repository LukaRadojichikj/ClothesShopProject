@model ClothesShopProject.Models.CartItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CartItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="display:none">
                <label asp-for="CartId" class="control-label"></label>
                <select asp-for="CartId" class="form-control" asp-items="ViewBag.CartId"></select>
                <span asp-validation-for="CartId" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="ShopApparelShoeId" class="control-label"></label>
                <select asp-for="ShopApparelShoeId" class="form-control" asp-items="ViewBag.ShopApparelShoeId"></select>
                <span asp-validation-for="ShopApparelShoeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
