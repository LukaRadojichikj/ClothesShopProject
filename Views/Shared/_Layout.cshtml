<!DOCTYPE html>

<style>    #cart-count {
        visibility: hidden;
    }
</style>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClothesShopProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClothesShopProject.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-gray border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Clothes Shop Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color: black; text-decoration: none;" onmouseover="this.style.color='white';" onmouseout="this.style.color='black';">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Brands" asp-action="Index" style="color: black; text-decoration: none;" onmouseover="this.style.color='white';" onmouseout="this.style.color='black';">Brands</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Shops" asp-action="Index" style="color: black; text-decoration: none;" onmouseover="this.style.color='white';" onmouseout="this.style.color='black';">Shops</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Apparels" asp-action="Index" style="color: black; text-decoration: none;" onmouseover="this.style.color='white';" onmouseout="this.style.color='black';">Apparel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Shoes" asp-action="Index" style="color: black; text-decoration: none;" onmouseover="this.style.color='white';" onmouseout="this.style.color='black';">Shoes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ShopApparelShoes" asp-action="Index" style="color: black; text-decoration: none;" onmouseover="this.style.color='white';" onmouseout="this.style.color='black';">Buy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ClothesShopProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function updateCartCount() {
            fetch('/CartItems/GetCartItemCount')
                .then(response => response.json())
                .then(count => {
                    const badge = document.getElementById("cart-count");
                    if (badge) {
                        badge.textContent = count;
                        badge.style.visibility = 'visible';
                    }
                })
                .catch(error => console.error("Error fetching cart count:", error));
        }

        document.addEventListener("DOMContentLoaded", updateCartCount);
    </script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
